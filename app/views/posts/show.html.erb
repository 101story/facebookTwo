<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<div>
<!-- "/posts/#{@post.id}/create_comment" -->
<!--# remote: true 여기 있는 컨텐트만 전송해라 -->
<%=form_tag create_comment_post_path(@post), method: :get, remote: true do %>
  <%= text_field_tag :content %>
  <%= submit_tag "write"%>
<% end %>
</div>

<div id="comments">
<% @comments.each do |comment| %>
  <%= comment.content %> <br>
<% end %>
<div></div>
</div>

